<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:Library.Controls"
             x:Class="Library.AddBookPage">
    <Shell.TitleView>
        <view:BarView/>
    </Shell.TitleView>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Название книги"></Label>
            <Entry x:Name="nameEntry"></Entry>
            <Label Text="Автор"></Label>
            <Entry x:Name="authorEntry"></Entry>
            <Button x:Name="confirmButton" Text="y" Clicked="confirmButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>